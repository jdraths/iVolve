<header class="navbar navbar-fixed-top navbar-inverse">
	<div class="navbar-inner">
		<div class="container">
			<a href="http://ivolve.herokuapp.com" id="logo"><span class="yellow">i</span><span class="green">V</span><span class="blue">o</span><span class="violet">l</span><span class="red">v</span><span class="orange">e</span></a>
				<%# id: "logo" above is a css link%>
			<form class="navbar-search pull-right">
				<input type="text" class="search-query" placeholder="Search">
			</form>
			<nav>
				<ul class="nav pull-right">
					<li><%= link_to "Home",		root_path %></li>
					<li><%= link_to "Help", 	help_path %></li>
					<% if signed_in? %>
						<li><%= link_to "Users", users_path %></li>
						<!-- Add My Apps, Friends, Leaders, Activities... -->
						
						<li id="fat-menu" class="dropdown">
							<a href="#" class="dropdown-toggle" data-toggle="dropdown"> <%= gravatar_for(current_user, size: 20) %> <b class="caret"></b>
							</a>
								
							<ul class="dropdown-menu">
								<li>
									<a href="#"><span class="glyphicon glyphicon-user"></span> 
									<%= link_to "Profile", current_user %></a>
								</li>

								<li>
									<a href="#"><span class="glyphicon glyphicon-wrench"></span>
									<%= link_to "Settings", edit_user_path(current_user) %></a>
								</li>
								
								<li class="divider"></li>

								<li>
									<a href="#"><span class="glyphicon glyphicon-off"></span>
									<%= link_to "Sign out", signout_path, method: "delete" %></a>
								</li>
							</ul>
						</li>
					<% else %>
						<li><%= link_to "Sign in", 	signin_path %></li>
					<% end %>
				</ul>
			</nav>
		</div>
	</div>
</header>