<% if signed_in? %>
	<div class="row">
		<aside class="col-xs-12 col-sm-4">
			<section>
				<%= render 'shared/user_info' %>
			</section>
			<section>
				<%= render 'shared/stats' %>
			</section>
			<section>
				<%= render 'shared/micropost_form' %>
			</section>
		</aside>
				
				<% unless linkedin? %>
					<div class="col-xs-6 col-sm-4" style="margin-top: 3px; margin-bottom: 3px">
						<%= link_to "Link your LinkedIn!", "/auth/linkedin", class: "btn btn-large btn-primary" %><span class="label label-success">New</span>
					</div>
				<% end %>
				<% unless twitter? %>
					<div class="col-xs-6 col-sm-4" style="margin-top: 3px; margin-bottom: 3px">
						<%= link_to "Link your Twitter!", "/auth/twitter?user_authorize=true", class: "btn btn-large btn-primary" %>
					</div>
				<% end %>
				<% if !facebook? || facebook_expired? %>
					<div class="col-xs-6 col-sm-4" style="margin-top: 3px; margin-bottom: 3px">
						<%= link_to "Link your Facebook!", "/auth/facebook", class: "btn btn-large btn-primary" %>
					</div>
				<% end %>
				<% unless instagram? %>
					<div class="col-xs-6 col-sm-4" style="margin-top: 3px; margin-bottom: 3px">
						<%= link_to "Link your Instagram!", "/auth/instagram", class: "btn btn-large btn-primary" %>
					</div>
				<% end %>
				<% unless foursquare? %>
					<div class="col-xs-6 col-sm-4" style="margin-top: 3px; margin-bottom: 3px">
						<%= link_to "Link your Foursquare!", "/auth/foursquare", class: "btn btn-large btn-primary" %>
					</div>
				<% end %>
				<% unless fitbit? %>
					<div class="col-xs-6 col-sm-4" style="margin-top: 3px; margin-bottom: 3px">
						<%= link_to "Link your Fitbit!", "/auth/fitbit", class: "btn btn-large btn-primary" %>
					</div>
				<% end %>
		<div class="col-xs-12 col-sm-8">	
				<h3>Peanut Gallery</h3>
				<%= render 'shared/feed' %>
		</div>
	</div>

	<div class="row">	
			<!-- Below are pie graphs -->
				<%= render 'shared/wellness_bar.html.erb' %>
	</div>
	<div class="row">
				<%= render 'shared/social_connections.html.erb' %>
	</div>
	<div class="row">
				<%= render 'shared/social_engagement.html.erb' %>
	</div>
	
<% else %>

	<div class="center jumbotron">
	
		<%= link_to image_tag("ivolvelogo.png", alt: "about-ivolve", class: "center img-responsive"), about_path %>
		<h1 style="color: white;">Welcome to the iVolution!</h1>
	  
		<h2>
			This is the home page for the
	    	<a id="gaLink" href="http://ivolve.me/">iVolve</a> application.
		</h2>

		<%= link_to "Sign up now!", signup_path, class: "btn btn-large btn-primary" %>
	</div>

<% end %>

<div style="padding-right: 40px;">
	<center>
	<%= link_to image_tag("ivolvecaveman.jpg", alt: "caveman-ivolve", class: "img-responsive"), about_path %>
	</center>
</div>