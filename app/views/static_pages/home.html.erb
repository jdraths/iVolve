<% if signed_in? %>
	<div class="row">
		<aside class="span4">
			<section>
				<%= render 'shared/user_info' %>
			</section>
			<section>
				<%= render 'shared/stats' %>
			</section>
			<section>
				<%= render 'shared/micropost_form' %>
			</section>
			
				<h3>Micropost Feed</h3>
				<%= render 'shared/feed' %>
			
		</aside>
		<div class="span8">
			<h3>Activity Feed</h3>
			<h4 style="border-top: 1px solid #e8e8e8">Twitter:</h4>
			<% if twitter? %>
			<table>
				<tr>
					<td><h5>Twitter</h5></td>
					<td><h5>User Name</h5></td>
					<td><h5>iVolve Index</h5></td>
				</tr>
				<tr>
					<td><h5>Friends:</h5></td>
					<td><h5><%= @twitter_friends %></h5></td>
					<td><h5><%= @twitter_avg_friends %></h5></td>
				</tr>
				<tr>
					<td><h5>Followers:</h5></td>
					<td><h5><%= @twitter_followers %></h5></td>
					<td><h5><%= @twitter_avg_followers %></h5></td>
				</tr>
				<tr>
					<td><h5>Tweets Sent:</h5></td>
					<td><h5><%= @twitter_sent %></h5></td>
					<td><h5><%= @twitter_avg_sent %></h5></td>
				</tr>
				<tr>
					<td><h5>Tweets Favorited:</h5></td>
					<td><h5><%= @twitter_favorites %></h5></td>
					<td><h5><%= @twitter_avg_fav %></h5></td>
				</tr>
				<tr>
					<td><h5>Twitter Lists:</h5></td>
					<td><h5><%= @twitter_lists %></h5></td>
					<td><h5><%= @twitter_avg_lists %></h5></td>
				</tr>
			</table>
			<% else %>
				<%= link_to "Link your Twitter!", "/auth/twitter?user_authorize=true", class: "btn btn-large btn-primary" %>
			<% end %>
			<h4 style="border-top: 1px solid #e8e8e8">Facebook:</h4>
			<% if facebook? %>
			<table>
				<th>
					<tr>
						<td><h5>Facebook</h5></td>
						<td><h5>User_name</h5></td>
						<td><h5>iVolve Index</h5></td>
					</tr>
				</th>
				<tr>
					<td><h5>Friends:</h5></td> 
					<td><h5><%= @facebook_num_friends %></h5></td> 
					<td><h5><%= @facebook_avg_friends %></h5></td>
				</tr>
				<tr>
					<td><h5>Likes:</h5></td>
					<td><h5><%= @facebook_num_likes %></h5></td>
					<td><h5><%= @facebook_avg_likes %></h5></td>
				</tr>
				<tr>
					<td><h5>Posts:</h5></td>
					<td><h5><%= @facebook_num_posts %></h5></td>
					<td><h5><%= @facebook_avg_posts %></h5></td>
				</tr>
				<tr>
					<td><h5>Statuses:</h5></td>
					<td><h5><%= @facebook_num_statuses %></h5></td>
					<td><h5><%= @facebook_avg_statuses %></h5></td>
				</tr>
				<tr>
					<td><h5>Achievements:</h5></td>
					<td><h5><%= @facebook_num_achievements %></h5></td>
					<td><h5><%= @facebook_avg_achievements %></h5></td>
				</tr>
				<tr>
					<td><h5>Subscribers:</h5></td>
					<td><h5><%= @facebook_num_subscribers %></h5></td>
					<td><h5><%= @facebook_avg_subscribers %></h5></td>
				</tr>
				<tr>
					<td><h5>Subscribed to you:</h5></td>
					<td><h5><%= @facebook_num_subscribed_to %></h5></td>
					<td><h5><%= @facebook_avg_subscribed_to %></h5></td>
				</tr>
			</table>
			<% else %>
				<%= link_to "Link your Facebook!", "/auth/facebook", class: "btn btn-large btn-primary" %>
			<% end %>
			<h4 style="border-top: 1px solid #e8e8e8">Instagram:</h4>
			<% if instagram? %>
			<table>
				<tr>
					<td><h5>Instagram</h5></td>
					<td><h5>User Name</h5></td>
					<td><h5>iVolve Index</h5></td>
				</tr>
				<tr>
					<td><h5>Followers:</h5></td>
					<td><h5><%= @instagram_num_followers %></h5></td>
					<td><h5><%= @instagram_avg_followers %></h5></td>
				</tr>
				<tr>
					<td><h5>Following:</h5></td>
					<td><h5><%= @instagram_num_following %></h5></td>
					<td><h5><%= @instagram_avg_following %></h5></td>
				</tr>
				<tr>
					<td><h5>Shared:</h5></td>
					<td><h5><%= @instagram_num_media %></h5></td>
					<td><h5><%= @instagram_avg_media %></h5></td>
				</tr>
				<tr>
					<td><h5>Likes:</h5></td>
					<td><h5><%= @instagram_num_likes_out %></h5></td>
					<td><h5><%= @instagram_avg_likes_out %></h5></td>
				</tr>
			</table>
			<% else %>
				<%= link_to "Link your Instagram!", "/auth/instagram", class: "btn btn-large btn-primary" %>
			<% end %>
			<h4 style="border-top: 1px solid #e8e8e8">Fitbit:</h4>
			<% if fitbit? %>
			<table>
				<tr>
					<td><h5>Fitbit</h5></td>
					<td><h5>User Name</h5></td>
					<td><h5>iVolve Index</h5></td>
				</tr>
				<tr>
					<td><h5>Height:</h5></td>
					<td><h5><%= @fitbit_height %></h5></td>
					<td><h5><%= @fitbit_avg_height %></h5></td>
				</tr>
				<tr>
					<td><h5>Weight:</h5></td>
					<td><h5><%= @fitbit_weight %></h5></td>
					<td><h5><%= @fitbit_avg_weight %></h5></td>
				</tr>
				<tr>
					<td><h5>Running stride length:</h5></td>
					<td><h5><%= @fitbit_stride_length_run %></h5></td>
					<td><h5><%= @fitbit_avg_length_run %></h5></td>
				</tr>
				<tr>
					<td><h5>Walking stride length:</h5></td>
					<td><h5><%= @fitbit_stride_length_walk %></h5></td>
					<td><h5><%= @fitbit_avg_length_walk %></h5></td>
				</tr>
				<tr>
					<td><h5>Lifetime Total Active Score:</h5></td>
					<td><h5><%= @fitbit_lifetime_tot_active_score %></h5></td>
					<td><h5><%= @fitbit_avg_life_active_score %></h5></td>
				</tr>
				<tr>
					<td><h5>Best Total Active Score:</h5></td>
					<td><h5><%= @fitbit_best_tot_active_score_value %></h5></td>
					<td><h5><%= @fitbit_avg_best_active_score %></h5></td>
				</tr>
				<tr>
					<td><h5>Date Accomplished:</h5></td>
					<td><h5><%= @fitbit_best_tot_active_score_date %></h5></td>
				</tr>
				<tr>
					<td><h5>Lifetime Total Calories Out:</h5></td>
					<td><h5><%= @fitbit_lifetime_tot_cal_out %></h5></td>
					<td><h5><%= @fitbit_avg_life_cal_out %></h5></td>
				</tr>
				<tr>
					<td><h5>Best Total Calories Out:</h5></td>
					<td><h5><%= @fitbit_best_tot_cal_out_value %></h5></td>
					<td><h5><%= @fitbit_avg_best_cal_out %></h5></td>
				</tr>
				<tr>
					<td><h5>Date Accomplished:</h5></td>
					<td><h5><%= @fitbit_best_tot_cal_out_date %></h5></td>
				</tr>
				<tr>
					<td><h5>Lifetime Total Distance:</h5></td>
					<td><h5><%= @fitbit_lifetime_tot_dist %></h5></td>
					<td><h5><%= @fitbit_avg_life_tot_dist %></h5></td>
				</tr>
				<tr>
					<td><h5>Best Total Distance:</h5></td>
					<td><h5><%= @fitbit_best_tot_dist_value %></h5></td>
					<td><h5><%= @fitbit_avg_best_dist %></h5></td>
				</tr>
				<tr>
					<td><h5>Date Accomplished:</h5></td>
					<td><h5><%= @fitbit_best_tot_dist_date %></h5></td>
				</tr>
				<tr>
					<td><h5>Lifetime Total Steps:</h5></td>
					<td><h5><%= @fitbit_lifetime_tot_steps %></h5></td>
					<td><h5><%= @fitbit_avg_life_tot_steps %></h5></td>
				</tr>
				<tr>
					<td><h5>Best Total Steps:</h5></td>
					<td><h5><%= @fitbit_best_tot_steps_value %></h5></td>
					<td><h5><%= @fitbit_avg_best_tot_steps %></h5></td>
				</tr>
				<tr>
					<td><h5>Date Accomplished:</h5></td>
					<td><h5><%= @fitbit_best_tot_steps_date %></h5></td>
				</tr>
			</table>
			<% else %>
				<%= link_to "Link your Fitbit!", "/auth/fitbit", class: "btn btn-large btn-primary" %>
			<% end %>
		
		</div>
	</div>
<% else %>
	<div class="center hero-unit">
	
		<%= link_to image_tag("ivolvelogo1.jpg", alt: "about-ivolve"), 'http://ivolve.me/about-ivolve' %>
		<h1 style="color: white;">Welcome to the iVolution!</h1>
	  
		<h2>
			This is the home page for the
	    	<a href="http://ivolve.me/">iVolve</a> application.
		</h2>

		<%= link_to "Sign up now!", signup_path, class: "btn btn-large btn-primary" %>
	</div>
<% end %>

<div style="padding-right: 40px;">
	<center>
	<%= link_to image_tag("ivolvecaveman.jpg", alt: "caveman-ivolve"), 'http://ivolve.me/' %>
	</center>
</div>