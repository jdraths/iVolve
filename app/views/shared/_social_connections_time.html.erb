<div class="col-xs-12" style="border-top: 1px solid #e8e8e8">
	<div class="center-block" style="text-align:center">
		<p class="h3">My Social Connections over Time</p>
		<button type="button" class="btn btn-default btn-sm" data-toggle="modal" data-target="#connections-time-modal"><span class="glyphicon glyphicon-info-sign"></span>
		</button>
	</div>
	<div class="modal fade" id="connections-time-modal" tabindex="-1" role="dialog" aria-labelledby="socialConnectionsTimeModalLabel" aria-hidden="true">
		<div class="modal-dialog">
			<div class="modal-content">
				<div class="modal-header">
					<button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
					<h4 class="modal-title" id="socialConnectionsTimeModalLabel">Social Connections over Time</h4>
				</div>
				<div class="modal-body">
						This graph displays the total change over time in number of social connections.
				</div>
				<div class="modal-footer">
					<button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
				</div>
			</div><!-- /.modal-content -->
		</div><!-- /.modal-dialog -->
	</div><!-- /.modal -->
	<%= content_tag :div, "", id: "connections-line", data: {connections: connections_over_time(@user.id) } %>
</div>